{
  "name": "react-router-v7-monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --stream dev",
    "dev:web": "pnpm --filter web dev",
    "start": "pnpm -r --stream start",
    "start:web": "pnpm --filter web start",
    "db:drop": "pnpm --filter @zecreator/db db:drop",
    "db:generate": "pnpm --filter @zecreator/db db:generate",
    "db:apply": "pnpm --filter @zecreator/db db:apply",
    "db:apply-prod": "pnpm --filter @zecreator/db db:apply-prod",
    "db:apply-preview": "pnpm --filter @zecreator/db db:apply-preview",
    "typegen": "pnpm -r typegen",
    "typecheck": "pnpm -r typecheck",
    "check": "biome check .",
    "check:fix": "biome check --fix .",
    "clean": "rm -rf node_modules && pnpm -r exec -- rm -rf node_modules && rm pnpm-lock.yaml"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "lefthook": "^1.13.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@8.14.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
